        <Button x:Name="btnAssignCourse" Content="Assign Course" HorizontalAlignment="Left" Margin="243,342,0,0" VerticalAlignment="Top" Width="279" Height="35" FontSize="22" Click="btnAssignCourse_Click" FontFamily="Segoe UI Light" Background="#FFACBACD"/>
        <Button x:Name="btnAddAdmin" Content="Add Admin" HorizontalAlignment="Left" Margin="243,412,0,0" VerticalAlignment="Top" Width="279" Height="33" FontSize="22" Click="btnAddAdmin_Click" FontFamily="Segoe UI Light" Background="#FFACBACD"/>
        <Label Content="Welcome, Admin! " HorizontalAlignment="Left" Margin="243,10,0,0" VerticalAlignment="Top" Width="325" Height="68" FontSize="36" Foreground="#FF093A0F" FontWeight="Bold"/>

    </Grid>
</Window>
